<%- include('../partials/head.ejs') %>

<div class="page-header">
    <h1>My Library</h1>
    <form class="search-form" action="<%= BASE_PATH %>/library" method="GET">
        <input type="text" name="search" placeholder="Filter by name..." value="<%= searchTerm %>">
        <button class="btn" type="submit">Filter</button>
        <% if (searchTerm) { %>
            <a href="<%= BASE_PATH %>/library" class="btn btn--alt">Clear Filter</a>
        <% } %>
    </form>
</div>

<% if (games.length > 0) { %>
    <div class="grid">
        <% games.forEach(game => { %>
            <article class="card game-card">
                <div class="card__image">
                    <img src="<%= game.background_image ? game.background_image : '/images/placeholder.jpg' %>" alt="<%= game.name %>">
                </div>
                <div class="card__content">
                    <h3 class="card__title"><%= game.name %></h3>
                    <div class="ratings">
                        <p class="rating-user">Your Rating: <strong><%= game.rating %>/5 ★</strong></p>
                        <p class="rating-community">Community Avg: <strong><%= game.community_rating ? parseFloat(game.community_rating).toFixed(1) : 'N/A' %>/5 ★</strong></p>
                    </div>
                </div>
                <div class="card__actions">
                    <a href="<%= BASE_PATH %>/edit-review/<%= game.review_id %>" class="btn btn--alt">Edit</a>
                    <form action="<%= BASE_PATH %>/delete-review" method="POST" onsubmit="return confirm('Are you sure you want to delete this review?');">
                        <input type="hidden" name="reviewId" value="<%= game.review_id %>">
                        <button type="submit" class="btn btn--danger">Delete</button>
                    </form>
                </div>
            </article>
        <% }); %>
    </div>
<% } else if (searchTerm) { %>
    <p>No games in your library match "<%= searchTerm %>". <a href="<%= BASE_PATH %>/library">View all games.</a></p>
<% } else { %>
    <div class="empty-state">
        <h2>Your library is empty!</h2>
        <p>Start by searching for games and adding a review.</p>
        <a href="<%= BASE_PATH %>/search" class="btn">Search for Games</a>
    </div>
<% } %>

<%- include('../partials/footer.ejs') %>