<header class="main-header">
    <nav class="main-header__nav">
        <div class="main-header__brand">
            <a href="/">GameLog</a>
        </div>
        <ul class="main-header__items">
            <% if (isAuthenticated) { %>
                <li class="main-header__item"><a class="<%= currentPath === '/search' ? 'active' : '' %>" href="/search">Search</a></li>
                <li class="main-header__item"><a class="<%= currentPath === '/library' ? 'active' : '' %>" href="/library">My Library</a></li>
                <li class="main-header__item"><a class="<%= currentPath === '/about' ? 'active' : '' %>" href="/about">About</a></li>
                <li class="main-header__item">
                    <form action="/logout" method="POST">
                        <button type="submit">Logout (<%= user.name %>)</button>
                    </form>
                </li>
            <% } else { %>
                <li class="main-header__item"><a class="<%= currentPath === '/login' ? 'active' : '' %>" href="/login">Login</a></li>
                <li class="main-header__item"><a class="<%= currentPath === '/register' ? 'active' : '' %>" href="/register">Register</a></li>
                <li class="main-header__item"><a class="<%= currentPath === '/about' ? 'active' : '' %>" href="/about">About</a></li>
            <% } %>
        </ul>
    </nav>
</header>
